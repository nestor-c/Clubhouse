<div class="columns is-centered">
    <div class="column is-half">
    <% @posts.each do |post| %>
        <div class="box">
            <div class="media">
                <div class="media-content">
                    <strong><%= post.title %></strong><br>
                    <small><i>@<%= post.author.username%></i></small>
                    <p><%= post.body %>
                </div>
            </div>
        </div>
        <%end%>
    </div>
</div>